<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_3"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Get Premium"
            android:textColor="#3c7962"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="DIET PLAN"
            android:textColor="#000000"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/freePlanLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitle"
            android:layout_marginTop="30dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Plan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333" />

                <!-- Features -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="AI - Diet Plan in a week"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <ImageView android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cross" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Doctor Consultant"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <ImageView android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cross" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Medical Checkup"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="₹0/-"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2 Month Plan Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/oneMonthPlanLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/freePlanLayout"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B5E2B9"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Month Plan"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C6B5B" />

                <!-- Features -->
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="AI - Diet Plan in a week"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <ImageView android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Doctor Consultant"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <ImageView android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Medical Checkup"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="₹699/-"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Subscribe Button -->
        <Button
            android:id="@+id/getPremiumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/oneMonthPlanLayout"
            android:layout_marginTop="40dp"
            android:backgroundTint="#2C6B5B"
            android:text="GET PREMIUM"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <!-- Back to Login Link -->
        <TextView
            android:id="@+id/back_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/getPremiumButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Back to Home"
            android:textColor="#3F51B5"
            android:textSize="16sp"/>
    </RelativeLayout>
</ScrollView>
