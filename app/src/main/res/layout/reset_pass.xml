<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_1">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="134dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126.5dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="126.5dp"
        android:contentDescription="App Logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Dietify"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#3c7962"/>

    <TextView
        android:id="@+id/reset_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="Reset password"
        android:textColor="#3c7962"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/reset_password_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_password_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enter your email to receive a password reset link"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <!-- Email Label -->

    <!-- Email Input -->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_password_subtitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="280dp"
        android:text="Email"
        android:textColor="#3c7962"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:padding="12dp" />

    <!-- Send Reset Link Button -->
    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#2C6B5B"
        android:text="Send Reset Link"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- Back to Login Link -->
    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Back to login"
        android:textColor="#3F51B5"
        android:textSize="16sp"/>

</RelativeLayout>