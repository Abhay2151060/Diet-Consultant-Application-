<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/meal_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Balanced Protein Plan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="7dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:text="Balanced Protein Plan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="A protein rich diet plan with balanced carbs and healthy fats"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Breakfast -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Breakfast"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="🕗 8:00 AM"
                        android:textSize="14sp"
                        android:textColor="#6B7B8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="🥚 2 Boiled Eggs    🍞 1 Multigrain Toast\n🥑 1/2 Avocado      ☕ Green Tea"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textColor="#6B7B8A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Lunch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Lunch"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="🕐 1:00 PM"
                        android:textSize="14sp"
                        android:textColor="#6B7B8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="🍗 Grilled Chicken       🍚 1 cup Brown Rice\n🥦 Steamed Broccoli   🥗 Curd"
                    android:textSize="14sp"
                    android:textColor="#6B7B8A"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Dinner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Dinner"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="🕗 8:00 PM"
                        android:textSize="14sp"
                        android:textColor="#6B7B8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="🐟 Grilled Fish                        🥗 Cucumber Salad\n🍠 Roasted Sweet Potato    🥒 Mint Chutney"
                    android:textSize="14sp"
                    android:textColor="#6B7B8A"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Traditional Indian Diet Plan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="10dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:text="Traditional Indian Diet Plan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="A healthy Indian meal plan rich in nutrients"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Breakfast -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Breakfast"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="🕗 8:00 AM"
                        android:textSize="14sp"
                        android:textColor="#6B7B8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="🥞 2 Moong Dal Chillas  🥛 1 Glass Buttermilk\n🍎 1 Apple                         🌰 5 Almonds"
                    android:textSize="14sp"
                    android:textColor="#6B7B8A"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Lunch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Lunch"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="🕐 1:30 PM"
                        android:textSize="14sp"
                        android:textColor="#6B7B8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="🍛 1 Bowl Dal               🍚 1 Cup Brown Rice\n🥗 Cabbage Sabzi       🥒 Cucumber Raita"
                    android:textSize="14sp"
                    android:textColor="#6B7B8A"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Dinner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Dinner"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="🕗 8:30 PM"
                        android:textSize="14sp"
                        android:textColor="#6B7B8A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="🌯 2 Roti                         🍲 Palak Paneer\n🥗 Green Salad             🥭 1 Mango Slice"
                    android:textSize="14sp"
                    android:textColor="#6B7B8A"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>