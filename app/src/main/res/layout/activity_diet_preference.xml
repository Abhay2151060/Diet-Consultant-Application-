<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <!-- Heading -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diet Preferences"
            android:textSize="24sp"
            android:textColor="#3c7962"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Allergies -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/allergiesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Data will load here)"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Medical Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Conditions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/medicalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Data will load here)"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Diet Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diet Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/dietTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Data will load here)"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Back to Profile Button -->
        <Button
            android:id="@+id/backToProfileBtn"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#2C6B5B"
            android:text="Back to Profile"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
